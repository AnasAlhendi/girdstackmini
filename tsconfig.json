{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["grid.ts"],
  "exclude": ["node_modules", "dist"]
}
